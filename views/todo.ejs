<!DOCTYPE html>
<head>
  <title>Todo App</title>
  <link rel="stylesheet" href="/public/stylesheets/style.css" type="text/css" />
  <link
    href="https://fonts.googleapis.com/css?family=Baloo+Bhai%7CCandal%7CChewy&display=swap"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
    crossorigin="anonymous"
  />
  <!-- <link rel="stylesheet" href="../public/stylesheets/style.css" /> -->
</head>
<body>
  <div class="todo-container">
    <h2>To-Do List</h2>
    <div class="todo">
      <form action="/" method="POST" class="todo-header">
        <input type="text" name="content" autocomplete="off" />
        <input type="date" name="endDate" autocomplete="off" />
        <button type="submit"><span class="fas fa-plus"></span></button>
      </form>
      <ul class="todo-list">
        <% todoTasks.forEach(details => { %>
        <li class="todo-list-item">
          <div class="todo-list-item-name"><%= details.content %></div>
          <div class="todo-list-item-start-date">
            <p class="task-start">Task started on:</p> <%= details.startDate %>
          </div>
          <div class="todo-list-item-end-date">
            <p class="task-start">Task ends on:</p> <%= details.endDate %>
          </div>
          <div class = edit-remove>
          <a href="/edit/<%= details._id %>" class="edit">
            <span class="fas fa-edit"></span>
          </a>
          <a href="/remove/<%= details._id %>" class="remove">
            <span class="fas fa-times"></span>
          </div>
          </a>
        </li>
        <% }) %>
      </ul>
    </div>
  </div>
</body>
